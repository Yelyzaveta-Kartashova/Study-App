<div class="max-w-3xl mx-auto p-8 bg-white shadow-lg rounded-lg">
  <!-- Topics Section -->
<div class="mb-8 bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-gray-900 mb-4">Topics</h2>
  
  <% if @topics.present? %>
    <ul class="list-disc list-inside space-y-2">
      <% @topics.each do |topic| %>
        <li>
          <%= link_to topic.name, [@subject, topic], class: "text-blue-600 hover:underline font-medium" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600">No topics available for this subject.</p>
  <% end %>
</div>

  <!-- Add New Topic Section -->
  <div>
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Add New Topic</h2>
    <%= form_with(model: [@subject, @topics.build], local: true, class: 'space-y-4') do |form| %>
      <div>
        <%= form.label :name, class: 'block text-gray-700 font-medium mb-2' %>
        <%= form.text_field :name, class: 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' %>
      </div>

      <div>
        <%= form.submit 'Create Topic', class: 'bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg shadow hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
      </div>
    <% end %>
  </div>
</div>
