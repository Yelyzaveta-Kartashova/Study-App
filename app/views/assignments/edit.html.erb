<h1>Hello!</h1>

<%= form_with(url: user_assignment_path(@user), scope: 'assignment', method: :patch, local: true, class: 'w-full') do |f| %>
  <div class="space-y-4">
    <%= f.collection_select :role_id, @roles, :id, :name, {prompt: "Please select a Role"}, 
      class: 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    <%= f.collection_select :status, Assignment.statuses.keys, :to_s, :titleize, 
      { prompt: "Please select a status" }, 
      class: 'w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500', 
      required: true %>
    <div class="flex justify-end">
      <%= f.submit 'Assign', class: 'bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>
  </div>
<% end %>