<% if resource.errors.any? %>
  <div id="error_explanation" class="bg-red-100 border border-red-300 text-red-700 p-4 rounded mb-4">
    <h2 class="font-semibold text-lg"><%= pluralize(resource.errors.count, "error") %> prohibited this action:</h2>
    <ul class="list-disc pl-5 mt-2">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
