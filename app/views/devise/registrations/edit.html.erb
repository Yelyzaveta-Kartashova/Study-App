<div class="flex items-center justify-center bg-gray-50 py-10 px-4 sm:px-6 lg:px-8">
  <div class="border-2 border-gray-800 p-8 bg-white shadow-lg rounded-lg w-full max-w-md">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.email_field :email, class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-4 text-gray-600">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-medium mb-2" %>
        <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.password_field :password_confirmation, class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", autocomplete: "new-password" %>
      </div>

      <div class="mb-4">
        <%= f.label :current_password, class: "block text-gray-700 font-medium mb-2" %>
        <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", autocomplete: "current-password" %>
      </div>

      <div class="flex items-center justify-end">
        <%= f.submit "Update", class: "bg-green-900 text-white font-semibold py-3 px-6 rounded-lg shadow hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    <% end %>

    <h3 class="text-lg font-semibold text-center text-gray-800 mt-6">Cancel my account</h3>

    <div class="text-center mt-4">
      Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-red-600 hover:text-red-800" %>
    </div>

    <div class="text-center mt-4">
      <%= link_to "Back", :back, class: "text-blue-600 hover:text-blue-800" %>
    </div>
  </div>
</div>
