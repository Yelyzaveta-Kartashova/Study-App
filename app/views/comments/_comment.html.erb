<div id="comment_<%= comment.id %>" 
     data-controller="comment-highlight" 
     data-comment-highlight-target="comment" 
     data-user-id="<%= comment.user_id %>" 
     class="flex items-start gap-2">

  <div class="comment-bubble relative p-3 rounded-lg max-w-md text-sm shadow-md">
    <p class="mb-1"><%= comment.content %></p>

    <div class="text-xs text-gray-600 dark:text-gray-400 mt-1">
      <%= comment.user ? comment.user.name : "User" %> Â· 
      <%= comment.created_at.present? ? "#{time_ago_in_words(comment.created_at)} ago" : "Unknown time ago" %>
    </div>
  </div>
</div>

