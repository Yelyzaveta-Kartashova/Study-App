<% if @generated_content %>
  <div data-controller="clipboard" class="mt-4 p-4 border border-gray-300 rounded-lg bg-gray-100">
    <div data-controller="clipboard" data-clipboard-success-content-value="Copied!">
      <div class="flex items-center justify-between mb-2">
        <h2 class="text-lg font-semibold">Generated Content:</h2>
        <button type="button" data-action="clipboard#copy" data-clipboard-target="button">
          <%= inline_svg("icon_svg/clipboard.svg") %>
        </button>
      </div>
      <div class="px-4">
        <div value="<%= @generated_content %>" data-clipboard-target="source" class="w-full bg-gray-100 overflow-hidden line-clamp-4" id="generated_content">
          <%= @generated_content %>
        </div>
      </div>
    </div>
  </div>

  <div data-controller="open-ai" data-action="click->open-ai#toggleShowMore" class="bg-gray-900 text-white font-semibold py-2 px-4 rounded-md shadow hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500 inline-flex items-center">
    <span data-open-ai-target="buttonText">
      Show more
    </span>
  </div>
<% end %>
